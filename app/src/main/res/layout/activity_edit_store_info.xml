<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btn_backToManageFrag"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_baseline_arrow_back_24"
                    android:backgroundTint="@color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"/>

                <!-- 오른쪽 정렬을 위한 View -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@color/fui_transparent"
                    android:textColor="@color/black"
                    android:text="저장"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/storeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="48dp"
                    android:text="매장명/상호명"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/input_storeName"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    android:backgroundTint="#656565"
                    android:ems="7"
                    android:inputType="text"
                    android:textColor="#000000"
                    app:layout_constraintStart_toEndOf="@+id/storeName"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="40dp"
                    android:text="주소"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/storeName" />


                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="220dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="57dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:textColor="#000000"
                    app:layout_constraintStart_toEndOf="@+id/userName"
                    app:layout_constraintTop_toBottomOf="@+id/storeName"
                    tools:context=".InfoActivity">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_address"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textColor="#000000">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_address"
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="#656565"
                            android:hint="도로명 주소"
                            android:inputType="text"
                            android:minLines="2"
                            android:textColor="#000000" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_address_detail"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:textColor="#000000">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_address_detail"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#656565"
                            android:hint="상세 주소"
                            android:inputType="text"
                            android:minLines="2"
                            android:textColor="#000000" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="165dp"
                    android:background="@color/fui_transparent"
                    android:src="@drawable/ic_baseline_search_24"
                    android:tint="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.915"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="228dp"
                    android:text="사업자명"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/input_userName"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="56dp"
                    android:layout_marginTop="28dp"
                    android:backgroundTint="#656565"
                    android:ems="7"
                    android:inputType="text"
                    android:textColor="#000000"
                    app:layout_constraintStart_toEndOf="@+id/userName"
                    app:layout_constraintTop_toBottomOf="@+id/btn_location" />

                <TextView
                    android:id="@+id/howtoeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="40dp"
                    android:text="매장 종류"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userName" />

                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#E1695E"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/howtoeat"
                    app:layout_constraintTop_toBottomOf="@+id/input_userName">

                    <RadioButton
                        android:id="@+id/radio_button_onlydeliver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:buttonTint="#E1695E"
                        android:text="포장만 가능"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <RadioButton
                        android:id="@+id/radio_button_both"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:buttonTint="#E1695E"
                        android:text="매장 식사, 포장 가능"
                        android:textColor="@color/black"
                        android:textSize="13dp" />


                </RadioGroup>

                <TextView
                    android:id="@+id/Kategorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:text="음식 카테고리"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.501"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tablenum" />


                <TextView
                    android:id="@+id/tablenumtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="236dp"
                    android:layout_marginTop="12dp"
                    android:text="테이블 수"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/radio_group" />

                <EditText
                    android:id="@+id/tablenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#E1695E"
                    android:ems="3"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/tablenumtext"
                    app:layout_constraintTop_toBottomOf="@+id/radio_group" />

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="#AFAEAE"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toStartOf="@+id/Kategorie"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tablenum" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="24dp"
                    android:background="#AFAEAE"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/Kategorie"
                    app:layout_constraintTop_toBottomOf="@id/tablenum" />


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutInScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:id="@+id/btn_code1"
                    android:layout_width="78dp"
                    android:layout_height="82dp"
                    android:background="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_code2"
                    app:srcCompat="@drawable/food_code_1_name" />

                <ImageView
                    android:id="@+id/btn_code2"
                    android:layout_width="78dp"
                    android:layout_height="82dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toEndOf="@+id/btn_code1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_code3"
                    app:srcCompat="@drawable/food_code_2_name" />

                <ImageView
                    android:id="@+id/btn_code3"
                    android:layout_width="78dp"
                    android:layout_height="82dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toEndOf="@+id/btn_code2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_code4"
                    app:srcCompat="@drawable/food_code_3_name" />

                <ImageView
                    android:id="@+id/btn_code4"
                    android:layout_width="78dp"
                    android:layout_height="82dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toEndOf="@+id/btn_code3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_code5"
                    app:srcCompat="@drawable/food_code_4_name" />

                <ImageView
                    android:id="@+id/btn_code5"
                    android:layout_width="78dp"
                    android:layout_height="82dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toEndOf="@+id/btn_code4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/food_code_5_name" />

                <ImageView
                    android:id="@+id/btn_code6"
                    android:layout_width="78dp"
                    android:layout_height="82dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_code1"
                    app:layout_constraintEnd_toStartOf="@id/btn_code7"
                    app:srcCompat="@drawable/food_code_6_name" />

                <ImageView
                    android:id="@+id/btn_code7"
                    android:layout_width="78dp"
                    android:layout_height="82dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toEndOf="@+id/btn_code6"
                    app:layout_constraintTop_toBottomOf="@+id/btn_code1"
                    app:layout_constraintEnd_toStartOf="@id/btn_code8"
                    app:srcCompat="@drawable/food_code_7_name" />

                <ImageView
                    android:id="@+id/btn_code8"
                    android:layout_width="78dp"
                    android:layout_height="82dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toEndOf="@+id/btn_code7"
                    app:layout_constraintTop_toBottomOf="@+id/btn_code1"
                    app:layout_constraintEnd_toStartOf="@id/btn_code9"
                    app:srcCompat="@drawable/food_code_8_name" />

                <ImageView
                    android:id="@+id/btn_code9"
                    android:layout_width="78dp"
                    android:layout_height="82dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toEndOf="@+id/btn_code8"
                    app:layout_constraintTop_toBottomOf="@+id/btn_code1"
                    app:layout_constraintEnd_toStartOf="@id/btn_code10"
                    app:srcCompat="@drawable/food_code_9_name" />

                <ImageView
                    android:id="@+id/btn_code10"
                    android:layout_width="78dp"
                    android:layout_height="82dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toEndOf="@+id/btn_code9"
                    app:layout_constraintTop_toBottomOf="@+id/btn_code1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/food_code_10_name" />

                <ImageView
                    android:id="@+id/btn_code11"
                    android:layout_width="78dp"
                    android:layout_height="82dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toStartOf="@id/btn_code6"
                    app:layout_constraintTop_toBottomOf="@+id/btn_code6"
                    app:srcCompat="@drawable/food_code_11_name" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
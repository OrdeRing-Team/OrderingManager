<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".InfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/baeminjua"
                android:text="@string/ordering"
                android:textColor="#E1695E"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="32dp"
                android:text="@string/info_main_1"
                android:textColor="#616161"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="128dp"
                android:layout_marginTop="5dp"
                android:text="@string/info_main_2"
                android:textColor="#616161"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/storeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="44dp"
                    android:text="@string/store_name"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/input_storeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:backgroundTint="#E1695E"
                    android:ems="7"
                    android:inputType="text"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/storeName"
                    tools:ignore="Autofill,LabelFor" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/address"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/input_userName" />


                <LinearLayout
                    android:id="@+id/ll_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_address"
                    tools:context=".InfoActivity">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_address_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:hint="@string/address_number"
                            android:inputType="number"
                            android:textColor="#000000"
                            android:textColorHint="@color/et_hint"
                            android:textSize="16sp"
                            tools:ignore="Autofill" />

                        <Button
                            android:id="@+id/btn_location"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/textview_round_rectangle_background"
                            android:outlineSpotShadowColor="#C85C5C"
                            android:text="@string/info_search_address"
                            android:textColor="#C85C5C"
                            tools:ignore="UnusedAttribute" />


                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:hint="@string/road_address"
                        android:inputType="number"
                        android:textColor="#000000"
                        android:textColorHint="@color/et_hint"
                        android:textSize="16sp"
                        tools:ignore="Autofill" />

                    <EditText
                        android:id="@+id/et_address_detail"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:hint="@string/detail_address"
                        android:inputType="number"
                        android:textColor="#000000"
                        android:textColorHint="@color/et_hint"
                        android:textSize="16sp"
                        tools:ignore="Autofill" />
                </LinearLayout>

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/owner_name"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/input_storeName" />


                <EditText
                    android:id="@+id/input_userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:backgroundTint="#E1695E"
                    android:ems="7"
                    android:inputType="text"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userName"
                    tools:ignore="Autofill" />

                <TextView
                    android:id="@+id/tv_howtoeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/store_type"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_address" />

                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#E1695E"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/ll_address"
                    app:layout_constraintTop_toBottomOf="@+id/tv_howtoeat">

                    <RadioButton
                        android:id="@+id/radio_button_onlydeliver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:buttonTint="#E1695E"
                        android:text="@string/info_only_takeout"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <RadioButton
                        android:id="@+id/radio_button_both"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:buttonTint="#E1695E"
                        android:text="@string/info_allowall"
                        android:textColor="@color/black"
                        android:textSize="13sp" />


                </RadioGroup>

                <TextView
                    android:id="@+id/Kategorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:text="@string/info_category"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.501"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tablenum" />

                <TextView
                    android:id="@+id/tablenumtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/info_table_count"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/radio_group"
                    app:layout_constraintTop_toBottomOf="@+id/radio_group" />


                <EditText
                    android:id="@+id/tablenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#E1695E"
                    android:ems="3"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/tablenumtext"
                    app:layout_constraintTop_toBottomOf="@+id/radio_group"
                    app:layout_constraintVertical_bias="0.0"
                    tools:ignore="Autofill" />

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:background="#AFAEAE"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toStartOf="@+id/Kategorie"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tablenum" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="24dp"
                    android:background="#AFAEAE"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/Kategorie"
                    app:layout_constraintTop_toBottomOf="@id/tablenum" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutInScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp">

                <ImageView
                    android:id="@+id/btn_code1"
                    android:layout_width="78dp"
                    android:layout_height="82dp"
                    android:background="#FFFFFF"
                    app:layout_constraintEnd_toStartOf="@id/btn_code2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/food_code_1_name"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/btn_code2"
                    android:layout_width="78dp"
                    android:layout_height="82dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toStartOf="@id/btn_code3"
                    app:layout_constraintStart_toEndOf="@+id/btn_code1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/food_code_2_name"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/btn_code3"
                    android:layout_width="78dp"
                    android:layout_height="82dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toStartOf="@id/btn_code4"
                    app:layout_constraintStart_toEndOf="@+id/btn_code2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/food_code_3_name"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/btn_code4"
                    android:layout_width="78dp"
                    android:layout_height="82dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toStartOf="@id/btn_code5"
                    app:layout_constraintStart_toEndOf="@+id/btn_code3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/food_code_4_name"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/btn_code5"
                    android:layout_width="78dp"
                    android:layout_height="82dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btn_code4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/food_code_5_name"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/btn_code6"
                    android:layout_width="78dp"
                    android:layout_height="82dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toStartOf="@id/btn_code7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_code1"
                    app:srcCompat="@drawable/food_code_6_name"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/btn_code7"
                    android:layout_width="78dp"
                    android:layout_height="82dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toStartOf="@id/btn_code8"
                    app:layout_constraintStart_toEndOf="@+id/btn_code6"
                    app:layout_constraintTop_toBottomOf="@+id/btn_code1"
                    app:srcCompat="@drawable/food_code_7_name"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/btn_code8"
                    android:layout_width="78dp"
                    android:layout_height="82dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toStartOf="@id/btn_code9"
                    app:layout_constraintStart_toEndOf="@+id/btn_code7"
                    app:layout_constraintTop_toBottomOf="@+id/btn_code1"
                    app:srcCompat="@drawable/food_code_8_name"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/btn_code9"
                    android:layout_width="78dp"
                    android:layout_height="82dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toStartOf="@id/btn_code10"
                    app:layout_constraintStart_toEndOf="@+id/btn_code8"
                    app:layout_constraintTop_toBottomOf="@+id/btn_code1"
                    app:srcCompat="@drawable/food_code_9_name"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/btn_code10"
                    android:layout_width="78dp"
                    android:layout_height="82dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btn_code9"
                    app:layout_constraintTop_toBottomOf="@+id/btn_code1"
                    app:srcCompat="@drawable/food_code_10_name"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/btn_code11"
                    android:layout_width="78dp"
                    android:layout_height="82dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toStartOf="@id/btn_code6"
                    app:layout_constraintTop_toBottomOf="@+id/btn_code6"
                    app:srcCompat="@drawable/food_code_11_name"
                    tools:ignore="ContentDescription" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/startApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#C85C5C"
                android:text="@string/start" />
        </LinearLayout>
    </ScrollView>

    <!--    <Button-->
    <!--        android:id="@+id/btn_map"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
